pigeonhole: THEORY
BEGIN

    n: VAR nat

    swap[D, R: TYPE](f: [D -> R], (i, j: D)): [D -> R] = 
        f WITH [(i):= f(j), (j) := f(i)]

    swap_injective[D, R: TYPE]: LEMMA
	    (FORALL (f: [D->R], (i, j: D)): injective?(f) â‡’ injective?(swap[D, R](f, i, j)))

    pigeonhole: LEMMA
	    FORALL (f: [below(n+1)-> below(n)]): NOT injective?(f)

END pigeonhole
